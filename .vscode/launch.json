    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Streamlit app debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "Debug Streamlit App: Current File",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/streamlit", // Adjust path if needed
            "args": [
                "run",
                "${file}"
            ],
            "console": "integratedTerminal"
        }
    ]
}